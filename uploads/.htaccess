# Prevent PHP execution in uploads directory
<FilesMatch "\.(php|phtml|php3|php4|php5|php7|phps|phar)$">
    Require all denied
</FilesMatch>

# Only allow safe file types to be served
<FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|pdf|doc|docx|ppt|pptx|xls|xlsx|txt|zip|mp4|webm)$">
    Require all granted
</FilesMatch>

# Disable directory listing
Options -Indexes
